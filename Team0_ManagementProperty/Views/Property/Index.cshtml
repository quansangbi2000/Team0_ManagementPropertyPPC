@model IEnumerable<Team0_ManagementProperty.Models.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <a>Home - Management Property</a>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Property Management</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-9">
                                <button type="button" class="btn btn-round btn-success">@Html.ActionLink("Create", "Add")</button>
                                
                            </div>
                                <div class="col-sm-12">
                                    <div class="card-box table-responsive">

                                        <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Property_Code)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Property_Name)
                                                    </th>
                                                    @*<th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>*@
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Address)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Area)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Bed_Room)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Bath_Room)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Price)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Installment_Rate)
                                                    </th>
                                                    @*<th>
                                    @Html.DisplayNameFor(model => model.Avatar)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Album)
                                </th>*@
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.District.District_Name)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Property_Status.Property_Status_Name)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Property_Type.Property_Type_Name)
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Property_Code)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Property_Name)
                                                        </td>
                                                        @*<td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>*@
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Address)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Area)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Bed_Room)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Bath_Room)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Price)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Installment_Rate)
                                                        </td>
                                                        @*<td>
                                        @Html.DisplayFor(modelItem => item.Avatar)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Album)
                                    </td>*@
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.District.District_Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Property_Status.Property_Status_Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Property_Type.Property_Type_Name)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>

                </div>

    </div>
</div>
</div>
</div>